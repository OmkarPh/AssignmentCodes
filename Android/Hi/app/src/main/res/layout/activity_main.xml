<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="630dp"
        android:layout_height="81dp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="30sp"
        android:editable="false"
        android:text="Generate a random number:"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/generateBtn"
        android:layout_width="331dp"
        android:layout_height="119dp"
        android:layout_marginBottom="25sp"
        android:onClick="generateRandomNo"
        android:text="Generate"
        android:textAlignment="center"
        android:textColor="#021AED"
        android:textIsSelectable="false"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="377dp"
        android:layout_height="57dp"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="3sp"
        android:editable="false"
        android:text="Select Inclusive Range:"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/fromNo"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="104dp"
        android:layout_height="57dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="2sp"
        android:layout_marginBottom="60sp"
        android:editable="false"
        android:text="to"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/generateBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/fromNo"
        android:layout_width="130sp"
        android:layout_height="92dp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="50sp"
        android:editable="true"
        android:ems="10"
        android:inputType="number"
        android:maxLength="5"
        android:overScrollMode="ifContentScrolls"
        android:text="0"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/generateBtn"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/toNo"
        android:layout_width="130sp"
        android:layout_height="95dp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="50sp"
        android:editable="true"
        android:ems="10"
        android:inputType="number"
        android:maxLength="5"
        android:overScrollMode="ifContentScrolls"
        android:text="6"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/generateBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/result"
        android:layout_width="296dp"
        android:layout_height="142dp"
        android:layout_marginBottom="25sp"
        android:overScrollMode="ifContentScrolls"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollHorizontally="true"
        android:text="3"
        android:textAlignment="center"
        android:textColor="#145901"
        android:textSize="100sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>